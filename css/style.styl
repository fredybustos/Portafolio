@import 'nib'
@import 'icon.styl'


$white = #fff
$green = green
$gray = #efeff4
$font-family = 'Shadows Into Light', cursive
$content-size = 17px
$title-size = 25px

.icon-size
  font-size 30px
  color $white
.font-size
  font-size 130px
  color $white



h1, h2, h3, figure, figcaption, ul, body, p
  margin 0
  padding 0

body
  background #000
  font-family $font-family
  letter-spacing 1px

.background
  width 100%
  height 120vh

  &-image
    position fixed
    width 100%
    height 100vh
    object-fit cover


.container-app
  position absolute
  top 0
  background-color rgba(0, 0, 0 0.5)
  width 100%


.wrapper
  width: 80%
  max-width 800px
  margin 0 auto



.post
  &-about
    &-ctn
      padding 1em 0
      margin-top 2em
    &-title
      margin-top 2em
      span
        color $white
        font-size $title-size
        border-radius 5px
        border-bottom 1px solid $green
        padding 4px
    &-me
      color $white
      text-align center
      font-size $content-size



.footer
  margin-top 8em
  &-contact
    text-align center
    width 100%
    &-container
    &-title
      text-align left
      margin 1em 0
      span
        color $white
        font-size $title-size
        border-radius 5px
        border-bottom 1px solid $green
        padding 4px
    &-info
      color $white
      margin 0
      font-size $content-size
      &-email
        display none
        li
          list-style none
          color $white
          a
            color $white
            text-decoration none
    &-button
      align-self flex-end
      button
        color $white
        border none
        border 1px solid $green
        border-radius 5px
        padding 5px 20px
        font-family $font-family
        font-size 18px
        background none
        cursor pointer
    &-form
      display flex
      justify-content center
      flex-direction column
      align-items center
    &-box
      width 100%
      margin 8px 0 0 0
      text-align left
      input
        width 100%
        outline 0
        box-sizing border-box
        padding .2em
        font-size 17px
        font-family $font-family
        &:focus
          background: #efeff4

      textarea
        outline 0
        width 100%
        height 80px
        padding .3em
        box-sizing border-box
        font-size 17px
        font-family $font-family
        &:focus
          background: #efeff4
    &-desc
      color $white
  &-copy
    color $white
    margin-top 2em
    font-size 12px
    font-family $font-family



.container
  &-head
    margin-top 3em
    span
      color $white
      padding 4px
      font-size $title-size
      border-bottom 1px solid $green
      border-radius 5px
  &-post
    display flex
    flex-direction column
    text-align center
    &-ctn
        margin 8em 0 0 0
        &-icon
          width 150px
          height 150px
          border-radius 50%
          background $green
          display flex
          justify-content center
          align-items center
          margin 0 auto
          background-image: linear-gradient(-90deg, $green 50%, transparent 50%),
          linear-gradient(-120deg, $gray 50%, $green 50%);
      &-icon
        display flex
        justify-content center
        align-items center
        width 122px
        height 122px
        border-radius 50%
        background #000
    &-abilities
      margin-top .5em
      &-icon
        display inline-block
        margin 0 .5px
    &-image
      margin-bottom 1.5em
    &-title
      color $white
      font-size $title-size
      padding 5px
      border-bottom 1px solid $green
      border-radius 5px
      display inline
    &-description
      color $white
      font-size $content-size
      margin-top 3em
    &-more
      text-align center
      margin-top 8em
      cursor pointer
      a
        color $white
        text-decoration none
        border 1px solid $green
        border-radius 5px
        padding 3px 5px
        font-size 20px


.barone
  background-image linear-gradient(90deg, $gray 50%, transparent 50%),
  linear-gradient(220deg, $orange 50%, $green 50%)
.bartwo
  background-image linear-gradient(90deg, $gray 50%, transparent 50%),
  linear-gradient(200deg, $green 50%, $gray 50%)
.barthree
  background-image linear-gradient(-90deg, $green 50%, transparent 50%),
  linear-gradient(-240deg, $gray 50%, $green 50%)
.barfour
  background-image linear-gradient(90deg, $gray 50%, transparent 50%),
  linear-gradient(220deg, $green 50%, $gray 50%)



.header
  background-position center
  height 100vh
  width 100%
  display flex
  flex-direction column
  align-items center
  justify-content center
  &-title
    color $white
    font-size 50px
    &-desc
      color $white
      margin-top .5em
  &-social
    list-style none
    margin-top 2em
    padding 0
    display flex
    &-item
      display flex
      justify-content center
      align-items center
    &-link
      text-decoration none
      font-size 30px
      color $white
      margin 0 8px
      position relative
      width 32px
      height 32px
      display flex
      justify-content center
      align-items center
      border-radius 50%
      &:before
        content ""
        position absolute
        border 3px solid $white
        top 0
        bottom 0
        left 0
        right 0
        color white
        border-radius 50%
        transition .4s
      &:hover:before
        display block
        top -10px
        bottom -10px
        right -10px
        left -10px
        border-color $green
  .profile
    padding 2px 5px
    border-radius 5px
    margin-top 5em
    position relative
    border 1px solid $green
    &-title
      color $white
      text-decoration none
      margin 0 15px
      cursor pointer
      transition 7s
      font-size 20px



.navbar
  width 100%
  position fixed
  top 0
  z-index 1
  &-ctn
    height 66px
    width 100%
  &-btn
    border none
    cursor pointer
    background $white
    border-radius 5px
    padding 1.3em
    position absolute
    right 25px
    top 8px
    display none
    &.is-active
      display block
  &.is-active
    background #000
    display block

  &-list
    background $white
    text-align center
    transition 2s
    display none
    &:before
      content ""
      position absolute
      right 33px
      top 52px
      border solid
      border-width 0 15px 15px 15px
      border-color $white transparent
  .is-active
    display block
  &-item
    list-style none
  &-link
    text-decoration none
    display block
    padding 1em
    color #000
    font-size $content-size
  &-link:focus
     background $green
  &-link:hover
      background $green
      color #fff



@media (min-width: 666px)

  .footer
    position relative
    &-contact
      width 48%
      order 2
      margin-top .5em
      &-container
        display flex
        justify-content space-between
        position relative
      &-info
        margin-top: 1.5em
        &-email
          margin-top 4em
          display block
      &-form
        width 50%
        order 1
      &-button
        button

  .navbar
    &-ctn
      display none
    &-list
      display flex
      align-items center
      justify-content flex-end
      &:before
        display none
    &-link:focus
       border-bottom 4px solid $green
       background none


@media (min-width: 1024px)


  .container
    &-post
      flex-direction row
      flex-wrap wrap
      justify-content space-between
      &-ctn
        width 45%
  .header
    &-title
      font-size 80px
      &-desc
        font-size 35px
    &-social
      &-link
        margin 0 10px
        font-size 40px
        &:hover:before
          display block
          top -14px
          bottom -14px
          right -14px
          left -14px
          border-color $green
  .navbar
    &-link
      font-size 20px
      padding .7em
